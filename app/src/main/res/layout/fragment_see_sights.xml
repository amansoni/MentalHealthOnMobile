<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_border">

            <TextView
                android:id="@+id/whatAreaTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="What area?"
                android:textSize="50dp"
                android:textColor="@color/textColour"
                android:gravity="center"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/what_area_button"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:text="Select search area"
                    android:textColor="@color/buttonTextColour"
                    android:drawableRight="@drawable/ic_navigate_next_black_24px"
                    android:background="@drawable/custom_button"
                    />
            </FrameLayout>
        </LinearLayout>

        <!--Layer for padding-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_border"
            >
            <TextView
                android:id="@+id/what_type_search_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="What type?"
                android:textSize="50dp"
                android:textColor="@color/textColour"
                android:gravity="center"/>
            <Button
                android:id="@+id/what_type_button"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:textColor="@color/buttonTextColour"
                android:text="Select site type"
                android:drawableRight="@drawable/ic_navigate_next_black_24px"
                android:background="@drawable/custom_button"
                />
        </LinearLayout>

        <!--Layer for padding-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_border">
            <TextView
                android:id="@+id/filter_by_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sort by?"
                android:textColor="@color/textColour"
                android:textSize="50dp"
                android:gravity="center"/>
            <Button
                android:id="@+id/filterByButton"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:textColor="@color/buttonTextColour"
                android:text="Select option"
                android:drawableRight="@drawable/ic_navigate_next_black_24px"
                android:background="@drawable/custom_button"
                />
        </LinearLayout>

        <!--Layer for padding-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
        </LinearLayout>

        <Button
            android:id="@+id/search_map"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="@color/buttonTextColour"
            android:drawableRight="@drawable/ic_search_black_24px"
            android:background="@drawable/custom_button"
            android:paddingRight="10dp"
            android:onClick="launchMaps"
            />
    </LinearLayout>