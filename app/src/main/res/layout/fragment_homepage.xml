<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_homepage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.theom.mmha.MainActivity">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <TextView
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textSize="20dp"
        android:text="Please select from below"
        android:textColor="@color/textColour"/>

    <!--Layer for padding-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
    </LinearLayout>

    <!--myGRaCE services button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/startAssessmentButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:drawableTop="@drawable/ic_grace_logo_svg"
            android:background="@drawable/custom_button_grey"
            android:text="MySafety Assessment"/>

        <Button
            android:id="@+id/previousAssessmentsButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:drawableTop="@drawable/ic_history_black_24px"
            android:background="@drawable/custom_button_grey"
            android:text="Previous Assessments"/>
    </LinearLayout>

    <!-- Other GRiST services button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/localServices"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:drawableTop="@drawable/ic_local_hospital_black_24px"
            android:layout_marginRight="10dp"
            android:text="Local Services Search"
            android:background="@drawable/custom_button_grey"/>

        <Button
            android:id="@+id/otherFeaturesButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:drawableTop="@drawable/ic_grist_black"
            android:text="Other GRiST services"
            android:background="@drawable/custom_button_grey"/>
    </LinearLayout>
</LinearLayout>
