<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <TextView
        android:text="Date of Birth"
        android:textStyle="bold"
        android:textColor="@color/textColour"
        android:textSize="30dp"
        android:paddingStart="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="What's the person's date of birth?"
        android:ems="10"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:id="@+id/assessmentTitle"
        android:gravity="center"/>


    <TextView
        android:text="Gender"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:textColor="@color/textColour"
        android:textSize="30dp" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gender_radio_buttons"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@string/nominalValue1"
            android:text="Male"
            android:textColor="@color/textColour" />

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@string/nominalValue2"
            android:text="Female"
            android:textColor="@color/textColour" />

        <RadioButton
            android:id="@+id/radio_dontknow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@string/nominalValue3"
            android:text="Don't know"
            android:textColor="@color/textColour" />
    </RadioGroup>

    <TextView
        android:text="Relationships"
        android:textStyle="bold"
        android:textColor="@color/textColour"
        android:textSize="30dp"
        android:paddingStart="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Living and relationship status"
        android:ems="10"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:id="@+id/relationshipStatus"
        android:gravity="center"/>

    <TextView
        android:text="Ethnicity"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:textColor="@color/textColour"
        android:textSize="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="What's the person's ethnic group?"
        android:ems="10"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:id="@+id/ethnicity"
        android:gravity="center"/>

    <TextView
        android:text="MAPPA"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:textColor="@color/textColour"
        android:textSize="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Does the person have any MAPPA?"
        android:ems="10"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:id="@+id/preSessionNotes"
        android:gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Begin Assessment"
        android:textColor="@color/white"
        android:gravity="center"
        android:drawableRight="@drawable/ic_navigate_next_black_24px"
        android:paddingLeft="10dp"
        android:background="@drawable/custom_button"
        android:id="@+id/startQuiz"/>

</LinearLayout>